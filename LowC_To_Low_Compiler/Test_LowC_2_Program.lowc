void Test_Memcpy(byte* Source, byte* Destination, byte Count)
{
	Source = Source;
	Destination = Destination;
	Count = Count;

	while (bit(Count, 1))
	{
		*Destination = *Source;

		Destination++;
		Source++;
		Count--;
	}

	return;
}